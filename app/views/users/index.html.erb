<div class="row">

  <div class="col-md-6">
    <div class="card">
      <div class="header">
        <div style="float:left;"><h4 class="title">Users</h4></div>
      </div>


      <table class="table table-hover table-striped">
        <thead>
        <tr>
          <th>Name</th>
          <th>Role</th>
        </tr></thead>
        <tbody>
        <% @users.each do |u| %>
            <tr>
              <td> <% if u.first_name == nil %>
                    <%= u.name  %>
                <% else %>
                    <%= u.fullname  %>
                <% end %>
              </td>
              <td><%= u.role %></td>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div align="center"><%= will_paginate @users %></div>

    </div>
  </div>

</div>