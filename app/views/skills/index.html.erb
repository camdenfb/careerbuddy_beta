<div class="row">

    <div class="col-md-6">
      <div class="card">
        <div class="header">
          <div style="float:left;"><h4 class="title">Skills</h4></div>
          <div style="float:right;"><a href="/skills/new"><i class='pe-7s-plus'></i></a></div>
        </div>


          <table class="table table-hover table-striped">
            <thead>
            <tr>
              <th>Name</th>
              <th></th>
            </tr></thead>
            <tbody>
            <% @skills.each do |skill| %>
              <tr>
                <td><%= link_to skill.skill_title, edit_skill_path(skill) %></td>
                <td><%= link_to raw("<i class='pe-7s-close-circle'></i>"), skill, :confirm => "Are you sure?", :method => :delete %></td>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <div align="center"><%= will_paginate @skills %></div>

      </div>
    </div>

  <div class="col-md-2" style="text-align:right;">
  </div>

  <div class="col-md-4" style="text-align:right;">
    <%= form_tag skills_path, :method => 'get', id: "search-form" do %>
        <div class="form-group">
          <%= text_field_tag :search, params[:search], :class => "form-control" %>
          <!--<%= button_tag( :class => "btn btn-default") do %><i class='pe-7s-search'></i>-->
          <%end%>

        </div>
    <% end %>
  </div>

</div>