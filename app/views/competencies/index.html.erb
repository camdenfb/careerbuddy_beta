<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="header">
        <div style="float:left;"><h4 class="title">Competencies</h4></div>
        <div style="float:right;"><a href="/competencies/new"><i class='pe-7s-plus'></i></a></div>
      </div>

      <table class="table table-hover table-striped">
        <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr></thead>
        <tbody>
        <% @competencies.each do |competency| %>
            <tr>
              <td><%= link_to competency.competency_title, edit_competency_path(competency) %></td>
              <td><%= link_to raw("<i class='pe-7s-close-circle'></i>"), competency, :confirm => "Are you sure?", :method => :delete %></td>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div align="center"><%= will_paginate @competencies %></div>
    </div>
  </div>

  <div class="col-md-2" style="text-align:right;">
  </div>

  <div class="col-md-4" style="text-align:right;">
    <%= form_tag competencies_path, :method => 'get', id: "search-form" do %>
        <div class="form-group">
          <%= text_field_tag :search, params[:search], :class => "form-control" %>
          <!--<%= button_tag( :class => "btn btn-default") do %><i class='pe-7s-search'></i>-->
          <%end%>

        </div>
    <% end %>
  </div>
</div>